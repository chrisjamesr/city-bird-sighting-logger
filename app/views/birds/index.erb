<div class="container">
   <div class="page-title">
    <div class="header-plus">
      Birds
    </div>
      <a href="/birds/new">Add New Bird</a>
      <a href="/sightings/new">Add New Sighting</a>
  </div>   

  <div class="bird-display">
  <% @birds.each do |bird| %>

    <div class="card">
      <img class="card-img-top " src="<%=bird.image_url%>" alt="<%=bird.species %>">
      <div class="card-body">
        <h4 class="card-title"><%=bird.species%></h4>
        <p class="card-text">Sightings: <%=bird.sightings.size %></p>
        <a href="/birds/<%= bird.id %>" class="btn btn-primary">See More</a>

      </div>
    </div>
  <%end%>

  </div>  
</div>   