<% if flash.has?(:error) %>
    <div class="alert alert-danger fade-out"><%= flash[:error] %></div>
  <% elsif flash.has?(:success) %>
    <div class="alert alert-success fade-out"><%= flash[:success] %></div>
  <% end %>


<div class="landing-header">
<h1 class="display-4">Sign Up</h1>


<form action="/signup" method="POST">
  <p><label for ="user_name">Enter Username:</label>
  <input type="text" name="user[username]" id="user_name"></p>

  <p><label for ="user_password">Enter Password:</label>
  <input type="password" name="user[password]" id="user_password"></p>

  <input type="submit" placeholder="submit" class="btn btn-primary  btn-lg">
  <a href="/login" class="btn btn-primary  btn-lg">Log In</a>
</form>

</div>