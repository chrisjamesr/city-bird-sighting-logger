<h1>Community Members</h1>

<% # add user.datetime for "Member Since ..."%>
<% @users.each do |user| %>

  <h3><a href="/users/<%=user.id%>"><%=user.username%></a></h3>
  
  User Sightings:
  <ul>
    <% user.sightings.each do |sighting| %>
      <li><a href="/sightings/<%=sighting.id%>"><%=sighting.location%> - <%=sighting.bird.species%></a></li>
    <% end %>
  </ul>

<% end %>
