<%= if flash.has?(:success) %>
 <div style="color:green;"> <%= flash[:success] %> </div>
<% end %>

<h1>Event</h1>
<h3><a href="/users/<%=@sighting.user.id%>"><%=@sighting.user.username.capitalize %></a> Spotted a 
  <a href="/birds/<%=@sighting.bird.id%>"><%=@sighting.bird.species%></a></h3>
<h3><%=@sighting.time_date%> - <%=@sighting.location %></h3>
<p><%=@sighting.description %></p>

<% if @sighting.user == current_user%>
  <p><a href="/sightings/<%=@sighting.id %>/edit">Edit Event</a></p>
  <p><form action="/sightings/<%=@sighting.id%>/delete" method="POST">
    <input type="hidden" id="hidden" name="_method" value ="DELETE">
    <input type="submit" value="Delete Event">
  </form></p>

<% end %>